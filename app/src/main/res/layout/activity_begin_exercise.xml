<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/textRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFE9E4"
        >

        <TextView
            android:id="@+id/exercise_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textSize="15sp"
            android:textColor="#444444"
            android:background="#FFB067"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
        />

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:text="00:00"
            android:layout_below="@+id/exercise_text"
            android:textColor="#444444"
            android:textSize="60sp" />

        <Button
            android:id="@+id/start_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_below="@+id/text_view_countdown"
            android:layout_centerHorizontal="true"
            android:text="start"
            android:textColor="#444444"
            android:background="#ACEEF3"/>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/start_pause_button"
            android:text="reset"
            android:visibility="invisible"
            tools:visibility="visible"
            android:textColor="#444444"
            android:background="#ACEEF3"/>

        <Button
            android:id="@+id/next_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reset_button"
            android:text="Next Exercise"
            android:textColor="#444444"
            android:background="#ACEEF3"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>